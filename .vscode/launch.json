    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "purpose": ["debug-in-terminal"],
            "justMyCode": false
        },
        {
            "name": "Debug Dashboard",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/energi/web/run_dashboard.py",
            "console":"integratedTerminal",
            "cwd": "${workspaceFolder}/energi/web",
            "justMyCode": false,
            "env": {
                "DEBUG": "1",
            }
        }
    ]
}